@using QuanLyClothesShop.Models;
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2 style="text-align: center;">GIỎ HÀNG CỦA BẠN</h2>
<br />
<table class="table-bordered">
    <tr>
        <th>MÃ SẢN PHẨM</th>
        <th>TÊN SẢN PHẨM</th>
        <th>ẢNH SẢN PHẨM</th>
        <th>SỐ LƯỢNG</th>
        <th>ĐƠN GIÁ</th>
        <th>THÀNH TIỀN</th>
        <th><a href="@Url.Action("XoaGioHang_All", "GioHang")">Xoá Tất Cả</a></th>
        <th colspan="2"><a href="\GioHang\XacNhanDonHang" class="btn btn-success btn-block wow slideInLeft">Đặt Hàng <i class="fa fa-angle-right"></i></a></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSP</td>
            <td style="width:150px;">@item.sTenSP</td>
            <td>
                <img src="~/Content/Images/@item.sHinhAnh" style="width:200px;" />
            </td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @msp = item.iMaSP }))
            {
                <td><input type ="number" min="1" name="txtSL" value="@item.iSoLuong" size="2" style="width:50px;"/></td>
                <td>@string.Format("{0:0,0}",@item.dDonGia)</td>
                <td>@string.Format("{0:0,0}",@item.dThanhTien)</td>
                <td><a href="@Url.Action("XemChiTiet","SanPham", new {@masp = item.iMaSP})">Chi Tiết</a></td>
                <td><a href="@Url.Action("XoaGioHang","GioHang", new{@MaSP =item.iMaSP})">Xoá</a></td>  
                <td><input type="submit" value="Update" class="btn btn-primary" /></td>
            }
        </tr>
    }
        <tr>
            <td></td>
            <td></td>          
            <td style="font-weight: bold; color: blue;">Tổng cộng: </td>
            <td style="font-weight: bold; color: red;">@string.Format("{0:0,0}",@ViewBag.TongSoLuong)</td>
            <td></td>
            <td style="font-weight: bold; color: red;">@string.Format("{0:0,0}",@ViewBag.TongThanhTien)</td>
            <td colspan="3"><a href="\SanPham\SanPhamPartial" class="btn btn-warning wow slideInLeft"><i class="fa fa-angle-left"></i> Quay lại Mua Hàng</a></td>
        </tr>
</table>

