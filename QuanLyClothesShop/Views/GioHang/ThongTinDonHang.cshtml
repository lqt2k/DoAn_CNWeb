@{
    ViewBag.Title = "ThongTinDonHang";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@using QuanLyClothesShop.Views.Shared;
@model List<HOADON>

<div class="container">
        <h2>DANH SÁCH NGƯỜI DÙNG</h2>
        <table class="table">
            <tr>
                <td colspan="2">
                    <a href="@Url.Action("ThemNguoiDung", "Admin")">
                        <input class="btn btn-dark", style="width:100%; height:50px; font-size:18px;"} type="button" value="THÊM NGƯỜI DÙNG" />
                    </a>
                </td>
                <td colspan="8"></td>
            </tr>
            <tr class="text-center">
