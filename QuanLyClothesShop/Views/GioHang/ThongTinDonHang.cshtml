                    }*@
                    <td style="border:1px solid black;">
                        @Html.ActionLink("Chi tiết", "ChiTietHoaDon", new { id=@hd.MAHD })
                    </td>
                    <td style="border:1px solid black;">
                        @Html.ActionLink("Sửa", "SuaHoaDon", new { id=@hd.MAHD  })
                    </td>
                    <td style="border:1px solid black;">
