@model IEnumerable<QuanLyClothesShop.Views.Shared.SANPHAM>

@{
    ViewBag.Title = "TimKiemSanPham";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="container">
    <h2 style="text-align:center;padding:30px;">KẾT QUẢ TÌM KIẾM</h2>
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Giá bán</th>
        </tr>
        @foreach (var item in Model)
        { 
            <tr>
                <td style="width:18%;">@item.TENSP</td>
                <td> <img src="~/Content/Images/@item.HINHANH" width="200px" height="200px;"/></td>
                <td>@item.MOTA</td>
                <td style="color:red">@item.DONGIA</td>
            </tr>
        }
    </table>
    <p style="text-align:center;color:red;">Tổng cộng số lượng tìm được: @ViewBag.sl</p>
</div>